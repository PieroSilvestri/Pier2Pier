<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rltv"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/tool_bar"
        layout="@layout/detailtoolbar" />

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="wrap_content"
    android:layout_height="465dp"
    android:layout_below="@+id/tool_bar"
    android:background="#ffffff">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.piero.postnote1.Dettaglio"
        android:id="@+id/detailContainer">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/postTitle"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/date"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:gravity="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:gravity="start|top"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ivImage"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/date"
            android:layout_alignTop="@+id/detailAnnulla"
            android:layout_centerHorizontal="true"
            android:textColor="#d41a1414"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/space2"
            android:layout_below="@+id/editText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listen"
            android:id="@+id/listen"
            android:layout_below="@+id/space2"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ivImage"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/postTitle"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/eliminaFoto"
            android:background="@drawable/ic_cancel_black_24px"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="invisible"
            android:layout_above="@+id/ivImage"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="false"
        android:id="@+id/linearLayout"
        android:background="@drawable/icon_bar_line"
        android:layout_below="@+id/ScrollView01"
        android:layout_alignBaseline="@+id/ScrollView01">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/foto"
            android:layout_weight="1"
            android:src="@drawable/ic_add_a_photo"
            android:background="#ffffff"
            android:layout_marginTop="1dp" />

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#bcb8b8"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/audio"
            android:layout_weight="1"
            android:background="#ffffff"
            android:src="@drawable/ic_keyboard_voice"
            android:layout_marginTop="1dp" />

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#bcb8b8"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/Save"
            android:background="#ffffff"
            android:layout_weight="1"
            android:src="@drawable/ic_done_all"
            android:layout_marginTop="1dp" />

    </LinearLayout>
</RelativeLayout>
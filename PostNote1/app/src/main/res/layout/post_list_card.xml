<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/rotondobordo"
            android:id="@+id/postItemsRL"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ddd">
                <TextView
                    android:id="@+id/title"
                    android:textColor="@color/titolo"
                    android:textSize="17sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginStart="10sp"
                    android:text="Titolo"
                    android:textStyle="bold"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageCardView"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7sp"
            android:layout_marginBottom="7sp">
            <TextView
                android:id="@+id/testo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                android:text="Contenuto"
                android:maxLines="10"
                android:ellipsize="end" />
        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_alignParentRight="true"
                android:id="@+id/linearLayout2">

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:id="@+id/importantButton"
                    android:src="@drawable/ic_star_border"
                    android:layout_weight="1"
                    android:tint="#b5a9a9"
                    android:backgroundTint="#ffffff" />

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:id="@+id/iconaFoto"
                    android:src="@drawable/ic_panorama"
                    android:layout_weight="1"
                    android:tint="#b5a9a9" />

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:id="@+id/audioIcon"
                    android:layout_weight="1"
                    android:src="@drawable/ic_headset"
                    android:tint="#b5a9a9" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>